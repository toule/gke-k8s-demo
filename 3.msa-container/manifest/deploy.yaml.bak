apiVersion: apps/v1
kind: Deployment
metadata:
  name: web
  labels:
    app: msa-web
    dep: web
spec:
  replicas: 2
  selector:
    matchLabels:
      role: msa-web
  template:
    metadata:
      labels:
        app: msa
        role: msa-web
    spec:
      containers:
      - image: asia.gcr.io/my_project/web:WEBTAG
        name: web
        ports:
        - containerPort: 3000
          name: http
          protocol: TCP
        resources:
          requests:
            cpu: "10m"
            memory: "10Mi"
          limits:
            cpu: "20m"
            memory: "20Mi"

